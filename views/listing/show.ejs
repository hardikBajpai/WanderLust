<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <h3 class="fw-bold text-center mb-3"><%= listing.title %></h3>

  <div class="card mx-auto shadow-sm" style="width: 40rem; border-radius: 15px;">

    <!-- Image -->
    <img 
      src="<%= listing.image.url %>" 
      alt="Listing Image"
      class="card-img-top"
      style="height: 300px; object-fit: cover; border-radius: 15px 15px 0 0;">

    <div class="card-body">

      <p class="text-muted fst-italic">
        Owned by : <%= listing.owner.username %>
      </p>

      <p><%= listing.description %></p>
      <p class="mb-1 fw-semibold">₹ <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="mb-1"><%= listing.location %></p>
      <p class="text-muted"><%= listing.country %></p>

      <!-- Edit / Delete (Only Owner) -->
      <% if (currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="d-flex gap-2 mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>

          <form 
            action="/listings/<%= listing._id %>?_method=DELETE" 
            method="POST">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

      <hr>

      <!-- Review Form -->
      <% if (currUser) { %>
        <h4 class="mb-3">Leave a Review</h4>

        <form 
          action="/listings/<%= listing._id %>/reviews" 
          method="POST" 
          class="needs-validation" 
          novalidate>

          <!-- Star Rating -->
          <fieldset class="starability-slot mb-3">
            <legend>Rating</legend>

            <input type="radio" id="rate1" name="review[rating]" value="1" required />
            <label for="rate1" title="Terrible">1 star</label>

            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2" title="Not good">2 stars</label>

            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3" title="Average">3 stars</label>

            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4" title="Very good">4 stars</label>

            <input type="radio" id="rate5" name="review[rating]" value="5" />
            <label for="rate5" title="Amazing">5 stars</label>
          </fieldset>

          <!-- Comment -->
          <div class="mb-3">
            <label class="form-label">Comments</label>
            <textarea 
              name="review[comment]" 
              rows="4" 
              class="form-control" 
              required></textarea>
            <div class="invalid-feedback">
              Please add some comments.
            </div>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
      <% } %>

      <!-- Reviews -->
      <h5 class="fw-bold mb-3">All Reviews</h5>

      <div class="row g-3">
        <% if (listing.reviews.length === 0) { %>
          <p class="text-muted">No reviews yet.</p>
        <% } %>

        <% for (let review of listing.reviews) { %>
          <div class="col-6">
            <div class="border rounded p-3 shadow-sm bg-light h-100">

              <h6 class="fw-bold"><%= review.author.username %></h6>
              <p class="mb-1"><%= review.comment %></p>
              <p class="text-muted mb-2">Rating: <%= review.rating %> ⭐</p>

              <!-- Delete Review (Only Author) -->
              <% if (currUser && review.author._id.toString() === currUser._id.toString()) { %>
                <form 
                  method="POST" 
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>

            </div>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</div>
